<!-- 404 Page renders when any error occured in the website. -->
<style>
    .bg-color {
      /* background-color: #181642; */
      height: 100vh;
    }
  
    h1 {
      font-size: 6rem !important;
    }
  
    p {
      font-size: 2.6rem !important;
    }
  
    body {
      background: red;
    background: linear-gradient( to right, hsl(0deg 100% 45% / 81%), hsl(245.91deg 100% 60% / 96%) );
    }
  </style>
  <!--  -->
  
  <div class="container-fluid bg-color">
    <div class="container text-center">
      <h1 class="display-4 text-light fw-bold">
        OOPS!
        <img
          src="https://cdn.jsdelivr.net/gh/ahmedhosna95/upload@1731955f/sad404.svg"
          alt="Image"
        />
      </h1>
      <% if(errorMessage) { %>
  
      <p class="lead text-light"><%= errorMessage %></p>
      <% } %>
    </div>
  </div>